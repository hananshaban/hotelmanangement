FROM node:22-alpine

WORKDIR /app

# Install dependencies for hot reload
COPY package*.json ./
RUN npm ci

# Copy source code
COPY . .

EXPOSE 3000

# Default command (can be overridden in docker-compose)
# For Docker Compose setups, run database migrations once before starting the dev server.
CMD ["sh", "-c", "npm run db:migrate && npm run db:seed && npm run dev"]
