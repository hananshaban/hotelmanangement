{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec node --loader ts-node/esm src/server.ts",
    "db:migrate": "knex migrate:latest --knexfile knexfile.ts",
    "db:migrate:make": "knex migrate:make --knexfile knexfile.ts -x ts",
    "db:migrate:rollback": "knex migrate:rollback --knexfile knexfile.ts",
    "db:migrate:rollback:all": "knex migrate:rollback --knexfile knexfile.ts --all",
    "db:migrate:status": "knex migrate:status --knexfile knexfile.ts",
    "db:seed": "knex seed:run --knexfile knexfile.ts",
    "db:seed:make": "knex seed:make --knexfile knexfile.ts -x ts",
    "migrate": "npm run db:migrate",
    "seed": "npm run db:seed",
    "test": "vitest",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "knex": "^3.1.0",
    "morgan": "^1.10.1",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@types/express": "^5.0.6",
    "@types/knex": "^0.15.2",
    "@types/morgan": "^1.9.10",
    "@types/node": "^25.0.3",
    "@types/supertest": "^6.0.3",
    "nodemon": "^3.1.11",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  }
}
